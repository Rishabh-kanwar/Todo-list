<html>
    <title>
      <%= title %>
    </title>
    <link rel="stylesheet" href="/css/home.css">
    <head>
        <h1> TODO LIST </h1>
    </head>
    <body>
        <p>DISCRIPTION 123</p>
        <form action="/create-list" method="POST">
        <input type="text" name="discription" required placeholder="What Do You Need To do">
        <p> CATEGORY</p>
        <select class='choose-category' name="category" aria-placeholder="Choose a category" display none>
          <option value="" disabled selected hidden> Choose a category</option>
          <option value="saab">Saab</option>
          <option value="fiat">Fiat</option>
          <option value="audi">Audi</option>
        </select>
        <p> DUE DATE</p>
        <input type="date" name="dueDate" required>
        <button type="submit"> ADD TASK</button>
         </form>
         <button> DELETE TASK</button>

        <!--  -->

          <table>
              <tr>
                  <th> Discription</th>
                  <th> Category</th>
                  <th> date </th>
              </tr>
              <%for(let i of todo_list){%>
              <tr>
                  <td> <%= i.discription%>:</td> 
                  <td> <%=i.category%> </td>
                  <td> <%=i.dueDate%> </td>
                    <!--<td id="delete-button"><a href="/delete-contact/?phone= <%=i.phone%>">   <i class="fas fa-times-circle"></i>  </a>  </td>-->  
                  <%}%>
              </tr>
              
          </table>

    </body>

    <script type="text/javascript" src="/js/home.js"> </script>
</html>